{{ form_start(form, {'attr' : { 'id' : 'form'}}) }}

<div class="col-lg-8 offset-lg-2 mt-4 fond pb-4 pt-3 px-5">
    <h4 class="mb-3 p-2">
        <i class="fa-brands fa-product-hunt mr-2"></i>
        {{ 'Nouveau médecin'|trans }}
    </h4>
    <hr class=" mb-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            {{ form_row(form.nom, {'attr':{'placeholder':'Nom médecin *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.prenom, {'attr':{'placeholder':'Prénom *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.telephone, {'attr':{'placeholder':'Téléphone *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.email, {'attr':{'placeholder':'Email *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_row(form.adresse, {'attr':{'placeholder':'Adresse *'}, 'label':false}) }}
        </div>
        <div class="col-md-6 mb-4">
            {{ form_rest(form) }}
        </div>
    </div>
    <div class="col-md-4 pt-3 fond-btn">
        <div class="text-center">
            {#                <div class="row">#}
            <button type="button" class="btn btn-shadow btn-success btn-normal mb-3 mr-3" id="send" onclick="load_btn('send')">
                <i class="fa fa-save"></i>
                {{ 'Enregistrer'|trans }}
            </button>

            <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-3">
                <i class="fa fa-delete-left"></i>
                {{ 'Effacer'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>