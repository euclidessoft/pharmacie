{% extends 'layout.html.twig' %}
{% block client %}active{% endblock %}
{% block body %}

<div class="container-fluid mt-3 fond">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-3 text-bold">
                <i class="fa-brands fa-product-hunt mr-2"></i>
                {{ "Liste des client"|trans }}
            </h3>
        </div>
        <div class="col-md-6">
            <a href="{{ path('app_client_new') }}" class="btn btn-primary float-end">
                <i class="fa fa-plus"></i>
                Nouveau Client
            </a>
        </div>
    </div>
    <hr>
    {% for message in app.flashes('notice') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message|trans }}.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    {% endfor %}
    <table class="table table-success-light table-bordered table-hover table-striped text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.Email }}</td>
                <td>{{ client.prenom }}</td>
                <td class="text-nowrap">
                    <a class="btn btn-success" title="{{ 'Voir'|trans }}" href="{{ path('app_client_show', {'id': client.id}) }}">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a class="btn btn-primary" title="{{ 'Modifier'|trans }}" href="{{ path('app_client_edit', {'id': client.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('client/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
