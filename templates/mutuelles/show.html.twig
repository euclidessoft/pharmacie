{% extends 'layout.html.twig' %}
{% block body %}
    <div class="col-lg-12 offset-lg-2 mt-4 fond pb-4 pt-3 px-5">

        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="mb-3 p-2">
                            <i class="fa-brands fa-product-hunt mr-2"></i>
                            {{ "Détails mutuelles"|trans }}
                        </h4>
                    </div>
                    {#                    <div class="col-lg-6">#}
                    {#                        <a href="{{ path('app_service_new', { 'mutuelles' : mutuelle.id}) }}"#}
                    {#                           class="btn btn-primary float-end"><i class="fa fa-plus"></i>#}
                    {#                            Créer un service#}
                    {#                        </a>#}
                    {#                    </div>#}
                </div>

                <hr class=" mb-5">
                <table class="table table-success-light table-bordered table-hover table-striped w-100">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ mutuelle.nom }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ mutuelle.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ mutuelle.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Montant</th>
                        <td>{{ mutuelle.montant }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="mb-3 p-2">
                            <i class="fa-brands fa-product-hunt mr-2"></i>
                            {{ "Listes des services"|trans }}
                        </h4>
                    </div>
                    <div class="col-lg-6">
                        <a href="{{ path('app_service_new', { 'mutuelles' : mutuelle.id}) }}"
                           class="btn btn-primary float-end"><i class="fa fa-plus"></i>
                            Créer un service
                        </a>
                    </div>
                </div>

            <hr class=" mb-5">
            <table class="table table-success-light table-bordered table-hover table-striped w-100">
                <thead>
                <tr>
                    <th>{{ ("Nom service"|trans) }}</th>
                    <td>{{ ("Type Service"|trans) }}</td>
                    <td>{{ ("Actions"|trans) }}</td>
                </tr>
                </thead>
                <tbody>

                {% for service in mutuelle.services %}
                    <tr>
                        <td>{{ service.nom }}</td>
                        <td>{{ service.type }}</td>
                        <td class="text-nowrap">
                            <a class="btn btn-success" title="{{ 'Voir'|trans }}"
                               href="{{ path('app_service_show', {'id': service.id}) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a class="btn btn-primary" title="{{ 'Modifier'|trans }}"
                               href="{{ path('app_service_edit', {'id': service.id}) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                            {{ include('service/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3 offset-md-3 pt-3 fond-btn">
        <div class="text-center">
            <a href="{{ path('app_mutuelles_index') }}" class="btn btn-shadow btn-success mb-3">Retour</a>
        </div>
    </div>
    </div>
{% endblock %}
